{
  "editor.detectIndentation": false,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "always"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "always"
    }
  },
  "cSpell.words": [
    "activitypub",
    "bigserial",
    "biomejs",
    "blurhash",
    "bunx",
    "datetime",
    "favourite",
    "favourited",
    "favourites",
    "fedi",
    "fedify",
    "fediverse",
    "fkey",
    "hono",
    "htmls",
    "idempotency",
    "ilike",
    "logtape",
    "microblog",
    "microblogging",
    "multikey",
    "nodeinfo",
    "Phanpy",
    "previewcard",
    "reblog",
    "reblogged",
    "reblogs",
    "SSRF",
    "unbookmark",
    "unfavourite",
    "unfollow",
    "unfollowing",
    "unreblog",
    "uuidv7",
    "webfinger"
  ]
}
